<div class="#">
<h2> 考试题 </h2>
</div>
<hr>
<br><br>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>问题</th>
      <th width="300"> 选项 </th>
      <th>管理</th>
    </tr>
  </thead>
  <tbody>
    <% @exams.each do |exam| %>
    <tr>
      <td>
         <p><%= exam.name %></p>
      </td>
       <td>
         <%= exam.question %>
       </td>
       <td>
         <% exam.choices.each do |choice| %>

           <%= render_aa1_status(choice) %> A.<%= exam.answer_1 %>
           <br><br>
           <%= render_bb1_status(choice) %> B.<%= exam.answer_2 %>
           <br><br>
           <%= render_cc1_status(choice) %> C.<%= exam.answer_3 %>
           <br><br>
           <%= render_dd1_status(choice) %> D.<%= exam.answer_4 %>
           <% end %>

       </td>

         <td>
             <%= link_to("开始答题", edit_choice_path(exam)) %>

             <!-- <%= link_to("Delete", choice_path(exam), method: :delete, data: { confirm: "Are your sure?" }) %> -->

         </td>
        <% end %>


     </tr>
   </tbody>
 </table>
<div class="group pull-right">
 <%= link_to("交卷 ", exams_path(@exam),class: "btn btn-primary btn-lg") %>
 </div>
